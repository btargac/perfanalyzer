{
  "name": "perfanalyzer",
  "version": "1.0.0",
  "description": "perfanalyzer monorepo for client, api and dashboard",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.14.x"
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint-js": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
    "lint-css": "stylelint \"client/**/*.{css,scss,sass}\"",
    "lint": "npm run lint-js && npm run lint-css",
    "fix-js": "npm run lint-js --fix",
    "fix-css": "npm run lint-css --fix",
    "fix": "npm run fix-js && npm run fix-css",
    "clean": "babel-node tools/run clean",
    "copy": "babel-node tools/run copy",
    "bundle": "babel-node tools/run bundle",
    "build": "babel-node tools/run build",
    "build-stats": "npm run build --release --analyse",
    "render": "babel-node tools/run render",
    "serve": "babel-node tools/run runServer",
    "start": "babel-node tools/run start"
  },
  "keywords": [
    "performance",
    "metrics",
    "performance",
    "metrics",
    "dashboard",
    "performance",
    "metrics",
    "api"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --no-ignore --fix",
      "git add --force"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add --force"
    ],
    "*.{css,scss,sass}": [
      "stylelint --fix",
      "git add --force"
    ]
  },
  "author": "btargac@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5",
    "puppeteer": "^3.0.1",
    "stylelint": "^13.3.3",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2"
  }
}
